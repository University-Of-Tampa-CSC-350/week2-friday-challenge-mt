<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#FF00FF"
    tools:context=".task2_layout">

    <!-- Title at the BOTTOM in tiny text -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="8sp"
        android:textStyle="bold"
        android:textColor="#00FF00"
        android:rotation="45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp" />

    <!-- ImageView in top RIGHT corner overlapping everything -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp" />

    <!-- Password Label but positioned where User ID should be -->
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="24sp"
        android:textColor="#FFFF00"
        android:rotation="-15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginStart="50dp" />

    <!-- User ID Label floating in the middle of nowhere -->
    <TextView
        android:id="@+id/userid"
        android:layout_width="110dp"
        android:layout_height="89dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="100dp"
        android:rotation="90"
        android:text="User ID"
        android:textColor="#FF0000"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Password EditText ABOVE the user ID field (backwards order!) - MADE VERY VISIBLE -->
    <EditText
        android:id="@+id/passwordedit"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:rotationY="@integer/material_motion_duration_short_2"
        android:ems="3"
        android:inputType="textPassword"
        android:hint="YoUCanT SeE mE"
        android:padding="15dp"
        android:background="#FFFF00"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textColorHint="#FF0000"
        android:elevation="10dp"
        android:rotation="12"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp" />

    <!-- User ID EditText way down below, overlapping with other stuff - MADE VERY VISIBLE -->

    <!-- Remember Me CheckBox floating randomly in top left -->

    <EditText
        android:id="@+id/useridedit"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:rotationY="@integer/material_motion_duration_medium_2"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="120dp"
        android:background="#00FF00"
        android:elevation="10dp"
        android:ems="2"
        android:hint="PlEaSe pUT SoMeThInG"
        android:inputType="text"
        android:padding="15dp"
        android:rotation="-8"
        android:textColor="#000000"
        android:textColorHint="#0000FF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/rememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me forever and ever"
        android:textSize="18sp"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp" />

    <!-- Sign In Button TINY in top corner -->
    <Button
        android:id="@+id/signin"
        android:layout_width="112dp"
        android:rotationX="@integer/material_motion_duration_medium_1"
        android:rotationY="@integer/material_motion_duration_medium_2"
        android:layout_height="54dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#7A3434"
        android:padding="12dp"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Divider VERTICAL and in wrong place -->
    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="400dp"
        android:background="#000000"
        android:rotation="45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="200dp" />

    <!-- ImageView in the CENTER of the screen -->

    <!-- Helper Text in the MIDDLE of the screen, huge -->

    <!-- Register Button HUGE and overlapping everything -->

    <ImageView
        android:id="@+id/centerImageView"
        android:layout_width="254dp"
        android:layout_height="246dp"
        android:rotation="45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/surprise" />

    <TextView
        android:id="@+id/helperText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:rotation="-25"
        android:text="Forgot your password?"
        android:textColor="#FF00FF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493" />

    <Button
        android:id="@+id/register"
        android:layout_width="300dp"
        android:rotationX="@integer/material_motion_duration_medium_2"
        android:layout_height="150dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#00FF00"
        android:rotation="15"
        android:text="Register"
        android:textColor="#FF00FF"
        android:textSize="72sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>